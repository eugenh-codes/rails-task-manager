<div class='container'>
  <h1><%= @task.title %></h1>
  <button>
    <%= link_to edit_task_path(@task) do %>
      <i class="fa-solid fa-pencil"></i> Edit this task
    <% end %>
  </button>
  <div class='alert alert-secondary'><%= @task.details %></div>
  <input type='checkbox' <%= @task.completed ? 'checked' : '' %> disabled >
  <label>
    <%= @task.completed ? 'This task is completed' : 'This task is not completed yet' %>
  </label>
  <br>
  <hr>
  <%= link_to tasks_path do %>
    <i class="fa-solid fa-clock-rotate-left"></i> Back to list
  <% end %>
</div>
